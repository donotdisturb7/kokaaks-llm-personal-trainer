# ==============================================================================
# CONFIGURATION LLM (Intelligence Artificielle)
# ==============================================================================

# Provider IA à utiliser: "groq" (cloud, rapide) ou "ollama" (local)
LLM_PROVIDER=groq

# --- Configuration Groq  ---
GROQ_API_KEY=

GROQ_MODEL=openai/gpt-oss-120b

# --- Configuration Ollama (Local LLM) ---
OLLAMA_HOST=localhost

OLLAMA_PORT=11434
OLLAMA_MODEL=
OLLAMA_TIMEOUT=30

# ==============================================================================
# CONFIGURATION BASE DE DONNÉES
# ==============================================================================

# PostgreSQL (async avec asyncpg)
DATABASE_URL=postgresql+asyncpg://kovaaks:kovaaks_pass@localhost:5436/kovaaks_ai
DATABASE_ECHO=false

# PostgreSQL individuels (pour PGVector / LangChain)
POSTGRES_HOST=localhost
POSTGRES_PORT=5436
POSTGRES_USER=kovaaks
POSTGRES_PASSWORD=kovaaks_pass
POSTGRES_DB=kovaaks_ai

# Redis (cache)
REDIS_URL=redis://localhost:6382/0

# Cache TTL (Time To Live en secondes)
REDIS_CACHE_TTL=300      # 5 minutes par défaut
REDIS_STATS_TTL=3600     # 1 heure pour les stats

# ==============================================================================
# CONFIGURATION KOVAAK'S API
# ==============================================================================

# URL du proxy Node.js qui utilise kovaaks-api-client
# Changed from 9001 to 9002 to avoid port conflict
KOVAAKS_PROXY_URL=http://localhost:9002
KOVAAKS_PROXY_PORT=9002

# Votre username KovaaK's (optionnel, pour contexte utilisateur)
KOVAAKS_USERNAME=

# ==============================================================================
# CONFIGURATION API
# ==============================================================================

# Serveur
API_HOST=0.0.0.0
API_PORT=8003
API_DEBUG=true

# CORS (liste JSON des origines autorisées)
CORS_ORIGINS=["http://localhost:3002", "http://127.0.0.1:3002"]

# ==============================================================================
# CONFIGURATION LOGS
# ==============================================================================

LOG_LEVEL=INFO           # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json          # json ou text