# ==============================================================================
# CONFIGURATION LLM (Intelligence Artificielle)
# ==============================================================================

# Provider IA à utiliser: "groq" (cloud, rapide) ou "ollama" (local)
LLM_PROVIDER=groq

# --- Configuration Groq  ---
GROQ_API_KEY=
GROQ_MODEL=openai/gpt-oss-120b

# --- Configuration Ollama (Local LLM) ---
OLLAMA_HOST=localhost

OLLAMA_PORT=11434
OLLAMA_MODEL=
OLLAMA_TIMEOUT=30

# ==============================================================================
# CONFIGURATION BASE DE DONNÉES
# ==============================================================================

# PostgreSQL (async avec asyncpg)
DATABASE_URL=postgresql+asyncpg://kovaaks:kovaaks_pass@localhost:5435/kovaaks_ai
DATABASE_ECHO=false

# Redis (cache)
REDIS_URL=redis://localhost:6381/0

# Cache TTL (Time To Live en secondes)
REDIS_CACHE_TTL=300      # 5 minutes par défaut
REDIS_STATS_TTL=3600     # 1 heure pour les stats

# ==============================================================================
# CONFIGURATION KOVAAK'S API
# ==============================================================================

# URL du proxy Node.js qui utilise kovaaks-api-client
KOVAAKS_PROXY_URL=http://localhost:9001

# Votre username KovaaK's (optionnel, pour contexte utilisateur)
KOVAAKS_USERNAME=

# ==============================================================================
# CONFIGURATION API
# ==============================================================================

# Serveur
API_HOST=0.0.0.0
API_PORT=8002
API_DEBUG=true

# CORS (liste JSON des origines autorisées)
CORS_ORIGINS=["http://localhost:3001", "http://127.0.0.1:3001"]

# ==============================================================================
# CONFIGURATION LOGS
# ==============================================================================

LOG_LEVEL=INFO           # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json          # json ou text